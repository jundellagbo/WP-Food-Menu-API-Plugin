defined( 'ABSPATH' ) or die;

if( ! class_exists( 'WpRestful' ) ) {

    class WpRestful
    {
        public $plugin;

        public function __construct() {
            $this->plugin = plugin_basename( __FILE__ );
        }

        public function flush() {
            flush_rewrite_rules();
        }
        
        public function register() {
            add_action( 'rest_api_init', array( $this, 'wp_restful_api_register' ) ); 
            add_action( 'rest_api_init', array( $this, 'wp_restful_category_api_register' ) ); 
            add_action( 'admin_menu', array( $this, 'add_admin_pages' ) );
            add_filter( 'plugin_action_links_' . $this->plugin, array( $this, 'settings_link' ) );
        }

        public function wp_restful_api_register() {
            register_rest_route( 'wp-food-menu/v1', '/api', array(
                'methods'   => 'GET',
                'callback'  => array( $this, 'wp_restful_retrieve' )
            ) );

            register_rest_route( 'wp-food-menu/v1/categories', '/api', array(
                'methods'   => 'GET',
                'callback'  => array( $this, 'wp_restful_retrieve_categroy' )
            ) );
        }

        public function add_admin_pages() {
            add_menu_page( 'WP Food Menu API', 'FM API', 'manage_options', 'wp-food-menu-api', array( $this, 'admin_index' ), '
    dashicons-editor-code', 110 );
        }

        public function admin_index() {
            require_once plugin_dir_path( __FILE__ ) . 'templates/admin.php';
        }

        public function settings_link( $links ) {
            $settings_link = '<a href="options-general.php?page=wp-food-menu-api">API Lookup</a>';
            array_push( $links, $settings_link );
            return $links;
        }

        public function loopPosts( $posts ) {
            $posts_data = array();
            foreach( $posts as $post ) {
                $id = $post->ID; 
                $post_thumbnail = ( has_post_thumbnail( $id ) ) ? get_the_post_thumbnail_url( $id ) : null;
                $posts_data[] = (object) array(
                    'id' => $id,
                    'thumbnail' => $post_thumbnail,
                    'price' => get_post_custom_values( 'price', $id )[0],
                    'title' => $post->post_title,
                    'description' => $post->post_content
                );
            }
            return $posts_data;
        }

        public function wp_restful_retrieve( $request ) {
            $posts_data = array();
            $post_type = 'food-menu';
            $paged = $request->get_param('page') != null ? (int)$request->get_param('page') : 1;
            $total = count(get_posts( array( 'post_type' => 'food-menu', 'numberposts' => -1 ) ) ) ;
            $per_page = $request->get_param('perpage') != null ? (int)$request->get_param('perpage') : $total;
            $posts = get_posts( array(
                    'post_type' => array( $post_type ),
                    'paged' => $paged,
                    'posts_per_page' => $per_page,
                    'search' => 'Light'
                )
            );

            $posts_data = $this->loopPosts( $posts );

            return [ 
                'data' => $posts_data,
                'meta' => [
                    'page' => $paged,
                    'per_page' => $per_page,
                    'paginate' => ceil($total/$per_page),
                    'total' => $total
                ]
            ];

        }

        public function wp_restful_retrieve_categroy() {
            $categories = get_terms( array( 'taxonomy' => 'food-menu-category', 'hide_empty' => 0 ) );
            $cat_ret = array();
            foreach( $categories as $cat ) {
                $cat_ret[] = (object) array(
                    'term_id' => $cat->term_id,
                    'name' => $cat->name,
                    'term_taxonomy_id' => $cat->term_taxonomy_id,
                    'taxonomy' => $cat->taxonomy,
                    'description' => $cat->description,
                    'count' => $cat->count,
                    'products' => $this->loopPosts(get_posts(
                        array(
                            'post_type' => 'food-menu',
                            'number_posts' => -1,
                            'tax_query' => array( array(
                                'taxonomy' => $cat->taxonomy,
                                'field' => 'id',
                                'terms' => $cat->term_id
                            ) )
                        )
                    ) )
                );
            }
            return [
                'data' => $cat_ret
            ];
        }
    }

    $wp_restful = new WpRestful();
    $wp_restful->register();
    // activation
    register_activation_hook( __FILE__, array( $wp_restful, 'flush' ) );
    // deactivation
    register_deactivation_hook( __FILE__, array( $wp_restful, 'flush' ) );
    // uninstall
    register_uninstall_hook( __FILE__, array( $wp_restful, 'flush' ) );
}